{
  "name": "@woosgem/monorepo",
  "version": "1.0.0",
  "author": "woosgem",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:react": "pnpm --filter @woosgem/ds-react test",
    "test:vue": "pnpm --filter @woosgem/ds-vue test",
    "test:all": "pnpm test && pnpm test:react && pnpm test:vue",
    "test:dashboard": "vitest run --coverage && node scripts/generate-dashboard.js",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.28.2"
}
