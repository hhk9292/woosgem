{
  "name": "@woosgem-dev/styles",
  "version": "0.0.2",
  "description": "SCSS styles and theme system for WooSGem Design System",
  "author": "woosgem",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.css",
  "style": "./dist/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/woosgem-dev/woosgem.git",
    "directory": "packages/ds-styles"
  },
  "exports": {
    ".": "./dist/index.css",
    "./min": "./dist/index.min.css",
    "./themes/default": "./dist/themes/default.css",
    "./themes/dark": "./dist/themes/dark.css",
    "./sass": {
      "sass": "./src/index.scss"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "sass src/index.scss:dist/index.css --source-map --watch"
  },
  "devDependencies": {
    "sass": "^1.83.0"
  }
}

